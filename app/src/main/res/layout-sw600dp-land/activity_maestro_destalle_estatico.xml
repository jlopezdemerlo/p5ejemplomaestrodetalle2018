<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="net.iessochoa.joseantoniolopez.p5ejemplomaestrodetalle2018.activities.MaestroDetalleEstaticoActivity">

    <fragment
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="40"
        android:name="net.iessochoa.joseantoniolopez.p5ejemplomaestrodetalle2018.fragments.ListadoFragment"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/frg_listado"
        
        tools:layout="@layout/fragment_listado" />
    <View
        android:layout_height="match_parent"
        android:layout_width="2dp"
        android:background="@android:color/holo_red_dark">
    </View>
    <!---En este frame incluiremos el detalle si trabajamos con fragment estatico.-->
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="60"
        android:id="@+id/frm_contenedorFrgEstatico"
        >

        <fragment
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="net.iessochoa.joseantoniolopez.p5ejemplomaestrodetalle2018.fragments.DetalleFragment"
            android:id="@+id/frg_detalle"

            tools:layout="@layout/fragment_detalle" />
    </FrameLayout>  


   
</LinearLayout>
